{
  "typography": {
    "font_families": {
      "sans": { "$value": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif", "$type": "fontFamily" },
      "mono": { "$value": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace", "$type": "fontFamily" }
    },

    "scale": {
      "h1": { "size": "48px", "line_height": "56px", "weight": 700, "tracking": "-0.02em" },
      "h2": { "size": "36px", "line_height": "44px", "weight": 700, "tracking": "-0.015em" },
      "h3": { "size": "28px", "line_height": "36px", "weight": 650, "tracking": "-0.01em" },
      "h4": { "size": "22px", "line_height": "30px", "weight": 650, "tracking": "-0.005em" },
      "body": { "size": "16px", "line_height": "26px", "weight": 400, "tracking": "0em" },
      "small": { "size": "14px", "line_height": "22px", "weight": 400, "tracking": "0em" },
      "caption": { "size": "12px", "line_height": "18px", "weight": 500, "tracking": "0.01em" }
    },

    "semantic": {
      "headline": { "family": "sans", "token": "h1" },
      "section_title": { "family": "sans", "token": "h2" },
      "card_title": { "family": "sans", "token": "h4" },
      "body_text": { "family": "sans", "token": "body" },
      "code_inline": { "family": "mono", "token": "small" },
      "badge": { "family": "sans", "token": "caption" }
    }
  }
}
