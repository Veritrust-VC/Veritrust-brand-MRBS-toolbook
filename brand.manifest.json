{
  "$schema": "https://mrbs.dev/schema/v1/brand.manifest.json",
  "mrbs_version": "1.0.0",
  "version": "1.0.0",
  "updated": "2026-01-21",

  "organization": {
    "name": "VeriTrust",
    "legal_name": "VeriTrust (Brand / Product)",
    "industry": "Digital Identity / Trust Infrastructure",
    "website": "https://veritrust.vc",
    "operating_model": "Product + Infrastructure Services",
    "headquarters": "Global / Distributed",
    "notes": "This SSOT describes the public VeriTrust brand for identity, trust, and governance infrastructure (ANS, MCP Trust Registry, A2A)."
